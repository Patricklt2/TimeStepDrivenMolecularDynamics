<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Configuración para salida por consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Configuración para archivo de log -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>simulation.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Logger específico para tu simulación -->
    <logger name="com.simulacion" level="DEBUG"/>
    
    <!-- Logger para Apache Commons Math (solo warnings y errores) -->
    <logger name="org.apache.commons.math3" level="WARN"/>
    
    <!-- Nivel de log por defecto -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
    
</configuration>